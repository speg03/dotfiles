#!/usr/bin/env bash

### String -> Number

# Specify command for calculating MD5
if type md5 &>/dev/null; then
    md5bin=md5
elif type md5sum &>/dev/null; then
    md5bin=md5sum
else
    echo "md5 or md5sum not found" >&2
    exit 1
fi

mod=${1:-256}
offset=${2:-0}

echo -n $(( 0x$($md5bin | cut -c1-4) % mod + offset ))
