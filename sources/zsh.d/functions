# -*- mode: shell-script; -*-

debug() {
    if [[ -e $HOME/.dotfiles_debug ]]; then
        echo "$(date +'%b %d %T') debug: $@" >&2
    fi
}

enable_debug() {
    if [[ ! -e $HOME/.dotfiles_debug ]]; then
        echo "Enable dotfiles debug" >&2
        touch $HOME/.dotfiles_debug
    fi
}

disable_debug() {
    if [[ -e $HOME/.dotfiles_debug ]]; then
        echo "Disable dotfiles debug" >&2
        rm $HOME/.dotfiles_debug
    fi
}
