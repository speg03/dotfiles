# -*- coding: utf-8; mode: shell-script; -*-

export LANG=en_US.UTF-8
export BASEPATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin
export PATH=$BASEPATH
export EDITOR='emacsclient -t'

## Suppress password dialogs
# default: SSH_ASKPASS=/usr/libexec/openssh/gnome-ssh-askpass
unset SSH_ASKPASS

## anyenv
export PATH=$HOME/.anyenv/bin:$PATH
if type anyenv &>/dev/null; then
    eval "$(anyenv init -)"
fi

## ghg
export PATH=$HOME/.ghg/bin:$PATH

## Heroku
export PATH="/usr/local/heroku/bin:$PATH"

## Vagrant
export VAGRANT_DEFAULT_PROVIDER=virtualbox

## user specific PATHs
export PATH=$HOME/local/bin:$HOME/bin:$PATH

## server specific profile
if [ -e $HOME/.zprofile.local ]; then
    source $HOME/.zprofile.local
fi
